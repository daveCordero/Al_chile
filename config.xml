<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.librosparatodoscr.alChile"
        versionCode = "1" 
        version     = "1.0.0" >
        <!-- versionCode is optional and Android only -->

    <name>Al Chile</name>

    <description>
        Al Chile es un periódico digital de escuelas localizadas en Costa Rica, las cuales utilizan productos educativos de Libros para Todos como herramienta para su aprendizaje.
    </description>

    <author href="http://apoyo.librosparatodoscr.com" email="david.herrera@nacion.com">
        David Herrera Cordero | Libros para Todos | Grupo Nación
    </author>



    <!-- plataformas -->
    <gap:platform name="android" />



    <!-- <preference name="ShowSplashScreenSpinner" value="false"/> -->

    <!-- <preference name="show-splash-screen-spinner" value="false" /> -->
    <preference name="show-splash-screen-spinner" value="true" />
    
    <preference name="auto-hide-splash-screen" value="true" />
    
    <preference name="SplashScreenDelay" value="5000" />

    <!-- all: default means both landscape and portrait are enabled -->
    <preference name="orientation" value="portrait" />

    <!-- all: possible values handset, tablet, or universal -->
    <preference name="target-device" value="universal" />
    
    <!-- all: hides the status bar at the top of the screen -->
    <preference name="fullscreen" value="true" />

    <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard.
    <preference name="android-installLocation" value="preferExternal" /> -->
    <preference name="android-installLocation" value="auto" />

    <preference name="EnableViewportScale" value="true" />

    <!--
        If you do not want any permissions to be added to your app, add the
        following tag to your config.xml; you will still have the INTERNET
        permission on your app, which PhoneGap requires.
    <preference name="permissions" value="none"/> -->

    <!-- to enable individual permissions use the following examples -->
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/file"/>



    <!-- Define app icon for each platform. -->
    <icon src="res/screen/android/Icon@2x.png" />
    <!-- 
    <icon src="phoneGap/icon-36-ldpi.png"     gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="phoneGap/icon-48-mdpi.png"     gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="phoneGap/icon-72-hdpi.png"     gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="phoneGap/icon-96-xhdpi.png"    gap:platform="android"    gap:qualifier="xhdpi" /> -->



    <!-- Define app splash screen for each platform. -->
    <platform name="android">
        <gap:splash src="res/screen/android/LDPI_portrait.png"     gap:platform="android"    gap:qualifier="port-ldpi" />
        <gap:splash src="res/screen/android/MDPI_portrait.png"     gap:platform="android"    gap:qualifier="port-mdpi" />
        <gap:splash src="res/screen/android/HDPI_portrait.png"     gap:platform="android"    gap:qualifier="port-hdpi" />
        <gap:splash src="res/screen/android/XHDPI_portrait.png"    gap:platform="android"    gap:qualifier="port-xhdpi" />
    </platform>



    <!-- Plugins -->
    <gap:plugin name="com.kumbe.phonegap.zoom.zoomcontrol" version="0.1.7" />



    <!--
        Define access to external domains.
        <access />            - a blank access tag denies access to all external resources.
        <access origin="*" /> - a wildcard access tag allows access to all external resource.
        Otherwise, you can specify specific domains:
        <access origin="http://phonegap.com" />                    - allow any secure requests to http://phonegap.com/
        <access origin="http://phonegap.com" subdomains="true" />  - same as above, but including subdomains, such as http://build.phonegap.com/
        <access origin="http://phonegap.com" browserOnly="true" /> - only allows http://phonegap.com to be opened by the child browser.
    -->
    <access origin="*"/>


</widget>